[Unit]
Description=Prometheus Service
Documentation=https://prometheus.io/docs/introduction/overview

[Service]
Type=simple
PIDFile=/var/run/prometheus.pid
User=root
Group=root
ExecStart=/usr/local/prometheus/prometheus-<%= @prometheus_version %>.linux-amd64/prometheus
Restart=on-failure

[Install]
WantedBy=multi-user.target
